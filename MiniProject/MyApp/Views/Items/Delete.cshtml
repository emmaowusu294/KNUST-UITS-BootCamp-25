@model MyApp.Models.Item
@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this item?</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label for="Price" class="control-label">Price</label>
        <input type="number" asp-for="Price" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label for="CategoryId" class="control-label">Category</label>
        <input type="text" asp-for="CategoryId" class="form-control" disabled />
        </div>
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
