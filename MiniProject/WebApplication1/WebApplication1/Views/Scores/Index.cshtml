
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Scores Index Page</h2></div>
        <d iv class="col-6 text-end">
            <a href="/Student/Add" class="btn btn-outline-primary">
                Add New Score
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Course Name</th>
            <th>Mark</th>
            <th>Grade</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentId</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Course</td>
                <td>@student.BirthDate.ToShortDateString()</td>
                <td class="text-center">
                    <a href="/Student/Edit/@student.StudentId" class="btn btn-outline-primary ">
                        Edit
                    </a>
                    <a href="/Student/Delete/@student.StudentId" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
